<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.iit.erp.jfxgtds_2425607.controllers.ViewTransactionsController">
    <center>
        <TableView fx:id="transactionTable" prefHeight="400.0" prefWidth="900">
            <columns>
                <TableColumn fx:id="itemCodeColumn" prefWidth="150.0" text="Item Code" />
                <TableColumn fx:id="internalPriceColumn" prefWidth="150.0" text="Internal Price" />
                <TableColumn fx:id="discountColumn" prefWidth="150.0" text="Discount Price" />
                <TableColumn fx:id="salePriceColumn" prefWidth="150.0" text="Sale Price" />
                <TableColumn fx:id="quantityColumn" prefWidth="150.0" text="Quantity" />
                <TableColumn fx:id="checksumColumn" prefWidth="150.0" text="Checksum" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <Pane minHeight="30.0" BorderPane.alignment="CENTER">
         <children>
                <ToolBar prefHeight="100.0" prefWidth="1280.0">
                    <items>
                        <Button mnemonicParsing="false" onAction="#onHomeButtonClick" prefHeight="26.0" prefWidth="217.0" styleClass="import-transactions-button" text="&lt; Home" />
                  <Button mnemonicParsing="false" onAction="#onImportTransactionsButtonClick" prefHeight="26.0" prefWidth="217.0" styleClass="import-transactions-button" text="/ Import Transactions" />
                        <Separator prefHeight="90.0" prefWidth="522.0" />
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onValidateTransactionsButtonClick" prefHeight="26.0" prefWidth="275.0" styleClass="validate-transactions-button" text="Validate Transactions" textAlignment="CENTER" />
                    </items>
                </ToolBar>
         </children></Pane>
    </bottom>
    <top>
        <VBox prefHeight="214.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
            <children>
                <StackPane prefHeight="150.0" styleClass="header">
                    <children>
                        <Label styleClass="heading-bar-label" text="VIEW TRANSACTIONS" textFill="WHITE">
                            <font>
                                <Font size="32.0" />
                            </font>
                        </Label>
                    </children>
                </StackPane>
            <AnchorPane prefWidth="1280.0">
               <children>
                  <Label fx:id="fileNameLabelViewTransactions" layoutY="6.0" prefHeight="30.0" prefWidth="670.0" />
               </children>
            </AnchorPane>
            </children>
        </VBox>
    </top>
</BorderPane>
