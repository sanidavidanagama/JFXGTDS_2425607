<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.iit.erp.jfxgtds_2425607.controllers.ViewTransactionsController">
    <center>
        <TableView fx:id="billTable" prefHeight="400.0">
            <columns>
                <TableColumn fx:id="billNumberColumn" prefWidth="106.0" text="Bill Number" />
                <TableColumn fx:id="itemCodeColumn" prefWidth="106.0" text="Item Code" />
                <TableColumn fx:id="internalPriceColumn" prefWidth="106.0" text="Internal Price" />
                <TableColumn fx:id="discountPriceColumn" prefWidth="106.0" text="Discount Price" />
                <TableColumn fx:id="salePriceColumn" prefWidth="106.0" text="Sale Price" />
                <TableColumn fx:id="quantityColumn" prefWidth="106.0" text="Quantity" />
                <TableColumn fx:id="lineTotalColumn" prefWidth="106.0" text="Line Total" />
                <TableColumn fx:id="grandTotalColumn" prefWidth="106.0" text="Grand Total" />
                <TableColumn fx:id="checksumColumn" prefWidth="106.0" text="Checksum" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <Pane minHeight="30.0" BorderPane.alignment="CENTER">
         <children>
                <ToolBar prefHeight="100.0" prefWidth="1280.0">
                    <items>
                        <Button fx:id="onImportTransactionsButtonClick" mnemonicParsing="false" prefHeight="26.0" prefWidth="217.0" styleClass="import-transactions-button" text="&lt; Import Transactions" />
                        <Separator prefHeight="90.0" prefWidth="823.0" />
                        <Button fx:id="onValidateTransactionsButtonClick" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="26.0" prefWidth="217.0" styleClass="validate-transactions-button" text="Validate Transactions &gt;" />
                    </items>
                </ToolBar>
         </children></Pane>
    </bottom>
    <top>
        <VBox prefHeight="214.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
            <children>
                <StackPane prefHeight="150.0" styleClass="header">
                    <children>
                        <Label text="View Transactions" textFill="WHITE">
                            <font>
                                <Font size="32.0" />
                            </font>
                        </Label>
                    </children>
                </StackPane>
            <AnchorPane prefWidth="1280.0">
               <children>
                  <Label fx:id="fileNameLabelViewTransactions" layoutY="6.0" prefHeight="34.0" prefWidth="670.0" />
               </children>
            </AnchorPane>
            </children>
        </VBox>
    </top>
</BorderPane>
